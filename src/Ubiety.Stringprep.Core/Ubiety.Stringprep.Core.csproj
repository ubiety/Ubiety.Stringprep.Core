    <PackageProjectUrl>https://stringprep.ubiety.dev</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ubiety/Ubiety.StringPrep.Core/</RepositoryUrl>
    <PackageTags>ubiety;stringprep;dotnet</PackageTags>
