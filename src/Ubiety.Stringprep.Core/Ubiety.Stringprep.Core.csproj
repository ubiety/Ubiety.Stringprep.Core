    </PackageReference>
    <PackageReference Include="Ubiety.StyleCop" Version="0.0.5" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Generated\Tables.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>Tables.cs</LastGenOutput>
